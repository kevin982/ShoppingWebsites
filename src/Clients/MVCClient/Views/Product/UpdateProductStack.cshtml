@{
	Layout = "_Layout";
}

@model MVCClient.Models.UpdateProductModel

@{
	ViewData["Title"] = "Create Category";
}

<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
	<path fill="#000b76" fill-opacity="1" d="M0,160L120,138.7C240,117,480,75,720,74.7C960,75,1200,117,1320,138.7L1440,160L1440,0L1320,0C1200,0,960,0,720,0C480,0,240,0,120,0L0,0Z"></path>
</svg>
<section id="cover">

	<div id="cover-caption">
		<div class="form-container bg-dark container gradient-background">
			<div class="row overflow-hidden border border-light rounded-3">

				<div class="form col-6">

					<h1 class="text-white mt-5">Update Product</h1>
					<hr class="bg-white" />
					<div class="justify-content-center" id="form">
						<div class="form-group mb-4">
							<label class="sr-only fs-3 text-dark">Website</label>
							<select id="websites" class="form-control bg-dark text-white"></select>
						</div>
						<div class="form-group mb-4">
							<label class="sr-only fs-3 text-dark">Product category</label>
							<select id="ProductCategories" class="form-control bg-dark text-white"></select>
						</div>
						<div class="form-group mb-4">
							<label class="sr-only fs-3 text-dark">Product</label>
							<select id="Products" class="form-control bg-dark text-white"></select>
						</div>
						<div class="form-group mb-4">
							<label class="sr-only fs-3 text-dark">New Stack</label>
							<input type="number" class="form-control text-white bg-dark" placeholder="New stack" id="newStack" />
						</div>
						<div class="form-group mb-4">
							<label class="sr-only fs-3 text-dark">New Price</label>
							<input type="number" class="form-control text-white bg-dark" placeholder="New price" id="newPrice" />
						</div>
						<button class="btn-fill-animation mt-4 rounded" type="submit" id="updateBtn">Update</button>

					</div>

				</div>

				<div class="col-6">
					<img class="fluid" src="~/Images/Online Shopping_Two Color.png" />
				</div>

			</div>
		</div>
	</div>

</section>
<svg xmlns="http://www.w3.org/2000/svg" class="mt-auto" viewBox="0 0 1440 320">
	<path fill="#000b76" fill-opacity="1" d="M0,192L120,202.7C240,213,480,235,720,229.3C960,224,1200,192,1320,176L1440,160L1440,320L1320,320C1200,320,960,320,720,320C480,320,240,320,120,320L0,320Z"></path>
</svg>

<script src="/js/updateProduct.js"></script>

@{
	if (ViewBag.Result is not null)
	{
		if ((bool)ViewBag.Result["succeeded"])
		{
			<script>
				Swal.fire({
					position: 'top-center',
					icon: 'success',
					background: 'black',
					title: 'Product updated successfully!',
					showConfirmButton: false,
					timer: 1500,
					customClass: {
						title: 'text-white'
					}
				})
			</script>
		}
		else
		{
			<script>
				Swal.fire({
					position: 'top-center',
					background: 'black',
					icon: 'error',
					title: 'Error',
					text: '@ViewBag.Result["title"]',
					customClass: {
						title: 'text-white',
						text: 'text-white'
					}
				})
			</script>
		}
	}
}