@{
	Layout = "_Layout";
}
 
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
	<path fill="#000b76" fill-opacity="1" d="M0,160L120,138.7C240,117,480,75,720,74.7C960,75,1200,117,1320,138.7L1440,160L1440,0L1320,0C1200,0,960,0,720,0C480,0,240,0,120,0L0,0Z"></path>
</svg>
<section id="cover">

	<div id="cover-caption">
		<div class="form-container bg-dark container bg-dark">
			<div class="row overflow-hidden">

				<div class="form col-6">

					<h1 class="text-white mt-5">@ViewBag.Result.content.name</h1>
  
					<p class="text-white fs-2 mb-4">Description: @ViewBag.Result.content.description</p>
					<p class="text-white fs-2 mb-4">Stack: @ViewBag.Result.content.stack</p>
					<p class="text-white fs-2 mb-4">Price: @ViewBag.Result.content.price</p>

					<div class="ratings mb-4">
						@{
							int stars = ViewBag.Result.content.stars;
							int starsCounter = 0;

							for (int i = 0; i < 5; i++)
							{
								if (starsCounter < stars)
								{
									starsCounter++;
									<i class="fa fa-star rating-color"></i>
								}
								else
								{
									<i class="fa fa-star"></i>
								}
							}
						}
					</div>

					<p class="text-white fs-2 mb-4">@ViewBag.Result.content.reviews Reviews</p>

					<svg id="shoppingCart" xmlns="http://www.w3.org/2000/svg" width="76" height="76" fill="white" class="bi bi-cart mb-4" viewBox="0 0 16 16">
						<path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
					</svg>


				</div>

				<div class="col-6 d-flex justify-content-center overflow-hidden">
					<img src="@ViewBag.Result.content.image" />
				</div>

				<hr class="bg-white mt-5 mb-5"/>


				<div id="reviewsContainer" class="container mb-5 mt-5">

					<div class="row mt-5">
						<h1 class="text-white text-center">Create your review!</h1>
					</div>

					<div class="row mt-3 text-center">
						<div class="ratings mb-4 text-center">
							@{
								for (int i = 0; i < 5; i++)
								{
									<i class="fa fa-star" id="star-@i"></i>
								}
							}
							<input hidden id="stars" type="number" value=0 />
						</div>
					</div>
					<div class="row mb-5">
						<div class="form-group">
							<textarea class="form-control rounded-0 bg-dark text-white" rows="3" id="comment"></textarea>
						</div>
					</div>

					<button class="btn-fill-animation mb-3" id="btnCreateReview">Create</button>


				</div>

				<h1 class="text-white text-center mt-5">All reviews</h1>

				<div class="container mb-5 mt-5" id="allReviewsContainer">
				</div>

			</div>
		</div>

		<div class="container mt-5 mb-5"><hr class="bg-white" /></div>


	</div>

</section>
<svg xmlns="http://www.w3.org/2000/svg" class="mt-auto" viewBox="0 0 1440 320">
	<path fill="#000b76" fill-opacity="1" d="M0,192L120,202.7C240,213,480,235,720,229.3C960,224,1200,192,1320,176L1440,160L1440,320L1320,320C1200,320,960,320,720,320C480,320,240,320,120,320L0,320Z"></path>
</svg>

<script id="product" productId="@ViewBag.Result.content.id" src="/js/GetProductById.js"></script>
 