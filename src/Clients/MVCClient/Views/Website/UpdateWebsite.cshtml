@model MVCClient.Models.UpdateWebsiteModel

@{
    ViewData["Title"] = "Create Category";
}

<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
    <path fill="#000b76" fill-opacity="1" d="M0,160L120,138.7C240,117,480,75,720,74.7C960,75,1200,117,1320,138.7L1440,160L1440,0L1320,0C1200,0,960,0,720,0C480,0,240,0,120,0L0,0Z"></path>
</svg>
<section id="cover">

    <div id="cover-caption">
        <div class="form-container bg-dark container gradient-background">
            <div class="row overflow-hidden border border-light rounded-3">

                <div class="form col-6">

                    <h1 class="text-white mt-5">Update Website</h1>
                    <hr class="bg-white"/>
                    <form asp-controller="Website" asp-action="CreateWebsite" class="justify-content-center" enctype="multipart/form-data">

                        <div>
                            <label class="sr-only fs-3 text-dark">Website</label>
                            <select asp-for="WebsiteId" id="websites" class="form-control bg-dark text-white"></select>
                        </div>
                        <div>
                            <label class="sr-only fs-3 text-dark">Website Category</label>
                            <select asp-for="WebsiteCategory" id="websiteCategories" class="form-control bg-dark text-white"></select>
                        </div>
                        <div class="form-group mb-4">
                            <label class="sr-only fs-3 text-dark">New website name</label>
                            <input asp-for="NewName" id="websiteName" class="form-control bg-dark text-white" placeholder="Website name"/>
                        </div>

                        <div class="form-group mb-4">
                            <label class="sr-only fs-3 text-dark">Website image</label>
                            <input asp-for="Image" class="form-control text-white bg-dark" placeholder="Website name"/>
                        </div>
                        <div class="form-group mb-4" id="mapContainer">
                            <label class="fs-3 text-white">Physical Location</label>
                            <input class="ml-3 form-controll" type="checkbox" id="physicalLocationCheckbox"/>
                            <input asp-for="Location" hidden id="location"/>
                        </div>
                        <button class="btn-fill-animation mt-4 rounded" type="submit">Update</button>

                    </form>

                </div>

                <div class="col-6">
                    <img class="fluid" src="~/Images/Online Shopping_Two Color.png"/>
                </div>

            </div>
        </div>
    </div>

</section>
<svg xmlns="http://www.w3.org/2000/svg" class="mt-auto" viewBox="0 0 1440 320">
    <path fill="#000b76" fill-opacity="1" d="M0,192L120,202.7C240,213,480,235,720,229.3C960,224,1200,192,1320,176L1440,160L1440,320L1320,320C1200,320,960,320,720,320C480,320,240,320,120,320L0,320Z"></path>
</svg>

<script src="~/js/updateWebsite.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBu23M7yYmFTx871zv8EjuRDoHJoCYBJ3M&callback=myMap"></script>

@{
    if (ViewBag.Result is not null)
    {
        if ((bool) ViewBag.Result["succeeded"])
        {
            <script>
				Swal.fire({
					position: 'top-center',
					icon: 'success',
					background: 'black',
					title: 'Website created successfully!',
					showConfirmButton: false,
					timer: 1500,
					customClass: {
						title: 'text-white',
						text: 'text-white'
					}
				})
			</script>
        }
        else
        {
            <script>
				Swal.fire({
					position: 'top-center',
					background: 'black',
					icon: 'error',
					title: 'Error',
					text: '@ViewBag.Result["title"]',
					customClass: {
						title: 'text-white',
						text: 'text-white'
					}
				})
			</script>
        }
    }
}