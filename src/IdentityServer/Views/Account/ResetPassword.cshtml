@model IdentityMicroservice.Models.ResetPasswordRequestModel

@{
    ViewData["Title"] = "ResetPassword";
    var m = Model;

}

@{
    if (ViewBag.Errors is not null)
    {
        if (string.IsNullOrEmpty(ViewBag.Errors))
        {
            <div class="alert alert-success">
                <h1>We have set your new password!</h1>
                <a href="https://localhost:9000">Go to home!</a>
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                <h3>We could not reset your password due to @ViewBag.Errors</h3>
                <a href="https://localhost:9000">Go to home!</a>
            </div>
        }
    }
}

<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#5c1794" fill-opacity="1" d="M0,96L60,117.3C120,139,240,181,360,186.7C480,192,600,160,720,160C840,160,960,192,1080,192C1200,192,1320,160,1380,144L1440,128L1440,0L1380,0C1320,0,1200,0,1080,0C960,0,840,0,720,0C600,0,480,0,360,0C240,0,120,0,60,0L0,0Z"></path></svg>

<div class="container form-container bg-dark">
    <div class="row">

        <div class="form col-6">

            <h1 class="text-white">Reset password</h1>
            <hr class="bg-white"/>

            <form method="post" asp-action="ResetPassword" class="mt-5">
                
                <input type="hidden" asp-for="Id" class="form-control" />
                <input type="hidden" asp-for="Token" class="form-control" />
 
                <div class="form-group mb-4">
                    <label asp-for="NewPassword" class="control-label text-white"></label>
                    <input asp-for="NewPassword" class="form-control bg-dark text-white" placeholder="New password">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="ConfirmPassword" class="control-label text-white"></label>
                    <input asp-for="ConfirmPassword" class="form-control bg-dark text-white" placeholder="Confirm password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button class="btn-fill-animation mt-4 rounded" type="submit">Change</button>
                </div>

            </form>

        </div>

        <div class="col-6">
            <img src="~/images/ManDoingExerciseAndWithAPhone.png" />
        </div>

    </div>
</div>

