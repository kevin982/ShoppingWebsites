@model LoginViewModel


<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
    <path fill="#5c1794" fill-opacity="1" d="M0,96L60,117.3C120,139,240,181,360,186.7C480,192,600,160,720,160C840,160,960,192,1080,192C1200,192,1320,160,1380,144L1440,128L1440,0L1380,0C1320,0,1200,0,1080,0C960,0,840,0,720,0C600,0,480,0,360,0C240,0,120,0,60,0L0,0Z"></path>
</svg>


<div class="login-page">
    <div class="lead">
        <h1>Login</h1>
        <p>Choose how to login</p>
    </div>

    <partial name="_ValidationSummary"/>

    <div class="row">

        @if (Model.EnableLocalLogin)
        {
            <div class="col-sm-6 mb-5">
                <div class="card routine-app-background">
                    <div class="card-header bg-dark text-white">
                        <h2 class="bg-dark text-white">Local Account</h2>
                    </div>

                    <div class="card-body bg-dark text-white">
                        <form asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl"/>

                            <div class="form-group">
                                <label class="bg-dark text-white" asp-for="Email"></label>
                                <input class="form-control bg-dark text-white" placeholder="Username" asp-for="Email" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="bg-dark text-white"></label>
                                <input type="password" class="form-control bg-dark text-white" placeholder="Password" asp-for="Password" autocomplete="off">
                            </div>
                            @if (Model.AllowRememberLogin)
                            {
                                <div class="form-group bg-dark text-white">
                                    <div class="form-check bg-dark text-white">
                                        <input class="form-check-input" asp-for="RememberLogin">
                                        <label class="form-check-label bg-dark text-white" asp-for="RememberLogin">
                                            Remember My Login
                                        </label>
                                    </div>
                                </div>
                            }

                            <button class="btn btn-primary btn-fill-animation" name="button" value="login">Login</button>
                            <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        }

        @if (Model.VisibleExternalProviders.Any())
        {
            <div class="col-sm-6">
                <div class="card routine-app-background">
                    <div class="card-header bg-dark text-white">
                        <h2 class="bg-dark text-white">External Account</h2>
                    </div>
                    <div class="card-body bg-dark text-white">
                        <div class="form-check mb-4">
                            <input class="form-check-input" id="isCostumer" type="checkbox" checked="true">
                            <label class="form-check-label text-white">Costumer</label>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" id="isOwner" type="checkbox">
                            <label class="form-check-label text-white">Owner</label>
                        </div>
                        
                        
                        <ul class="list-inline" id="externalProviders">
                            @foreach (var provider in Model.VisibleExternalProviders)
                            {
                                <li class="list-inline-item">
                                    <a class="btn btn-secondary"
                                       asp-controller="External"
                                       asp-action="Challenge"
                                       asp-route-scheme="@provider.AuthenticationScheme"
                                       asp-route-returnUrl="@Model.ReturnUrl"
                                       asp-route-role="costumer">
                                        @provider.DisplayName
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>

                </div>
            </div>
        }

        @if (!Model.EnableLocalLogin && !Model.VisibleExternalProviders.Any())
        {
            <div class="alert alert-warning">
                <strong>Invalid login request</strong>
                There are no login schemes configured for this request.
            </div>
        }
    </div>
</div>

<svg xmlns="http://www.w3.org/2000/svg" class="mt-auto" viewBox="0 0 1440 320">
    <path fill="#5c1794" fill-opacity="1" d="M0,288L60,240C120,192,240,96,360,90.7C480,85,600,171,720,186.7C840,203,960,149,1080,133.3C1200,117,1320,139,1380,149.3L1440,160L1440,320L1380,320C1320,320,1200,320,1080,320C960,320,840,320,720,320C600,320,480,320,360,320C240,320,120,320,60,320L0,320Z"></path>
</svg>

<script src="~/js/login.js"></script>